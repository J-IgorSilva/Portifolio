@model ContatoModel
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
    <h1 class="display-4">Editar contato</h1>

</div>

<div>
    <form asp-controller="Contato" asp-action="AlterarContato" method="post">

        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="Nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
            @Html.ValidationMessageFor(x=>x.Nome)
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Digite o Email do contato">
            @Html.ValidationMessageFor(x=>x.Email)
        </div>

        <div class="form-group">
            <label for="Celular">Celular</label>
            <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o Celular do contato">
            @Html.ValidationMessageFor(x=>x.Celular)
        </div>

        <button type="submit" class="btn btn-primary">Alterar Contato</button>
        <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </form>
</div>


