@model ContatoModel
@{
    ViewData["Title"] = "Apagar contato";
}
<div class="text-center">
    <h3>Deseja apagar o contato (@Model.Nome) ?</h3>
</div>

<a class="btn btn-warning" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>
<a class="btn btn-danger"  asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Apagar" role="button">Apagar Contato</a>
